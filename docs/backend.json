{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the e-Office Productivity Hub application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity (matches Firebase Auth UID)."
        },
        "role": {
          "type": "string",
          "description": "The role of the user (e.g., Employee or Manager)."
        },
        "department": {
          "type": "string",
          "description": "The department the user belongs to."
        },
        "employeeId": {
          "type": "string",
          "description": "The unique employee identifier for the user."
        },
        "designation": {
          "type": "string",
          "description": "The job title or position of the user."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "contactEmail": {
          "type": "string",
          "description": "The user's contact email, pre-filled from Firebase Auth.",
          "format": "email"
        },
        "contactPhone": {
            "type": "string",
            "description": "The user's contact phone number."
        },
        "onboarded": {
            "type": "boolean",
            "description": "Flag to indicate if the user has completed the onboarding process."
        }
      },
      "required": [
        "id",
        "role",
        "department",
        "employeeId",
        "designation",
        "fullName",
        "contactEmail",
        "onboarded"
      ]
    },
    "UserStreak": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "UserStreak",
        "type": "object",
        "description": "Tracks a user's engagement streak.",
        "properties": {
            "userId": {
                "type": "string",
                "description": "The ID of the user."
            },
            "currentStreak": {
                "type": "number",
                "description": "The user's current daily streak."
            },
            "longestStreak": {
                "type": "number",
                "description": "The user's longest ever daily streak."
            },
            "lastLogin": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp of the last login."
            }
        },
        "required": ["userId", "currentStreak", "longestStreak", "lastLogin"]
    },
    "PerformanceReview": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PerformanceReview",
      "type": "object",
      "description": "Represents a performance review, either a self-assessment or manager feedback.",
      "properties": {
          "id": { "type": "string" },
          "userId": { "type": "string", "description": "The user being reviewed." },
          "reviewerId": { "type": "string", "description": "The user who wrote the review." },
          "type": { "type": "string", "enum": ["self-assessment", "manager-feedback"] },
          "ratings": { "type": "object", "description": "Key-value pairs of assessment criteria and scores for self-assessments." },
          "comments": { "type": "string", "description": "Comments for a self-assessment." },
          "feedback": { "type": "string", "description": "Feedback from a manager." },
          "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "userId", "reviewerId", "type", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile information. The document ID is the Firebase Auth UID. Includes 'role' and 'department' fields for role-based access control."
        }
      },
      {
          "path": "/userStreaks/{userId}",
          "definition": {
              "entityName": "UserStreak",
              "schema": {
                  "$ref": "#/entities/UserStreak"
              },
              "description": "Stores engagement streak data for each user. The document ID is the user's UID."
          }
      },
      {
        "path": "/performanceReviews/{reviewId}",
        "definition": {
            "entityName": "PerformanceReview",
            "schema": {
                "$ref": "#/entities/PerformanceReview"
            },
            "description": "Stores all performance reviews. Security rules will control access based on userId and reviewerId."
        }
      }
    ]
  }
}
