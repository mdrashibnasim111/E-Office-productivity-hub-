{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the e-Office Productivity Hub application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity, typically the Firebase Auth UID."
        },
        "employeeId": {
          "type": "string",
          "description": "The employee's identification number."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "designation": {
          "type": "string",
          "description": "The user's job title or position."
        },
        "contactEmail": {
          "type": "string",
          "description": "The user's email address.",
          "format": "email"
        },
        "contactPhone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "role": {
          "type": "string",
          "enum": ["Employee", "Manager"],
          "description": "The role of the user within the application."
        },
        "department": {
          "type": "string",
          "description": "The department the user belongs to."
        },
        "onboarded": {
          "type": "boolean",
          "description": "Flag to indicate if the user has completed the onboarding process."
        }
      },
      "required": [
        "id",
        "employeeId",
        "fullName",
        "designation",
        "contactEmail",
        "role",
        "department",
        "onboarded"
      ]
    },
    "UserStreak": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserStreak",
      "type": "object",
      "description": "Tracks user's daily engagement streak.",
      "properties": {
        "currentStreak": {
          "type": "number",
          "description": "The current consecutive days of activity."
        },
        "longestStreak": {
          "type": "number",
          "description": "The longest streak of consecutive activity."
        },
        "lastLogin": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of the last login."
        }
      },
      "required": ["currentStreak", "longestStreak", "lastLogin"]
    },
    "PerformanceReview": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "PerformanceReview",
      "type": "object",
      "description": "Stores performance review data for users.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "The ID of the user being reviewed."
        },
        "reviewerId": {
          "type": "string",
          "description": "The ID of the user who submitted the review."
        },
        "type": {
          "type": "string",
          "enum": ["self-assessment", "manager-feedback"],
          "description": "The type of review."
        },
        "ratings": {
          "type": "object",
          "description": "Ratings for self-assessment.",
          "properties": {
            "quality": {"type": "number"},
            "timeliness": {"type": "number"},
            "communication": {"type": "number"},
            "collaboration": {"type": "number"},
            "initiative": {"type": "number"}
          }
        },
        "comments": {
          "type": "string",
          "description": "Comments for self-assessment."
        },
        "feedback": {
          "type": "string",
          "description": "Feedback from a manager."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the review was created."
        }
      },
      "required": ["userId", "reviewerId", "type", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile information after they complete the onboarding process."
    },
    "/userStreaks/{userId}": {
      "schema": { "$ref": "#/entities/UserStreak" },
      "description": "Stores engagement streak data for each user."
    },
    "/performanceReviews/{reviewId}": {
      "schema": { "$ref": "#/entities/PerformanceReview" },
      "description": "Stores performance review documents."
    }
  }
}
